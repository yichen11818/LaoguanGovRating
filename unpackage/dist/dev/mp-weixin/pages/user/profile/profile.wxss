@import "../../../uvue.wxss";
:host{display:flex;flex-direction:column}

.profile-container.data-v-952fae71 {
		padding: 30rpx;
		background-color: #f8f8f8;
		min-height: 100vh;
		box-sizing: border-box;
		width: 100%;
}
	
	/* 头像和用户信息 */
.profile-header.data-v-952fae71 {
		display: flex;
		align-items: center;
		margin-bottom: 40rpx;
		width: 100%;
}
.avatar-box.data-v-952fae71 {
		width: 150rpx;
		height: 150rpx;
		border-radius: 50%;
		overflow: hidden;
		background-color: #f5f5f5;
		margin-right: 30rpx;
		box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
		flex-shrink: 0;
}
.avatar.data-v-952fae71 {
		width: 100%;
		height: 100%;
}
.user-info.data-v-952fae71 {
		flex: 1;
}
.user-name.data-v-952fae71 {
		font-size: 36rpx;
		font-weight: bold;
		display: block;
		margin-bottom: 16rpx;
		text-align: left;
}
.user-role.data-v-952fae71 {
		display: inline-block;
		font-size: 24rpx;
		padding: 4rpx 16rpx;
		border-radius: 20rpx;
		text-align: left;
}
	
	/* 角色样式 */
.role-user.data-v-952fae71, .role-1.data-v-952fae71 {
		background-color: #f5f5f5;
		color: #666;
}
.role-rater.data-v-952fae71, .role-2.data-v-952fae71 {
		background-color: #e6f3fc;
		color: #1989fa;
}
.role-admin.data-v-952fae71, .role-3.data-v-952fae71 {
		background-color: #e6f7ed;
		color: #07c160;
}
	
	/* 未登录提示 */
.login-prompt.data-v-952fae71 {
		margin-bottom: 30rpx;
		width: 100%;
}
.guest-message.data-v-952fae71 {
		display: flex;
		flex-direction: column;
		align-items: center;
		padding: 30rpx;
}
.guest-icon.data-v-952fae71 {
		width: 100rpx;
		height: 100rpx;
		margin-bottom: 20rpx;
}
.guest-text.data-v-952fae71 {
		font-size: 30rpx;
		color: #666;
		text-align: center;
		margin-bottom: 30rpx;
}
.profile-login-btn.data-v-952fae71 {
		background-color: #07c160;
		color: #fff;
		font-size: 30rpx;
		width: 60%;
		border-radius: 40rpx;
}
	
	/* 信息卡片 */
.profile-card.data-v-952fae71 {
		background-color: #fff;
		border-radius: 16rpx;
		padding: 30rpx;
		margin-bottom: 30rpx;
		box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
		width: 100%;
		box-sizing: border-box;
}
.section-title.data-v-952fae71 {
		font-size: 34rpx;
		font-weight: bold;
		margin-bottom: 30rpx;
		position: relative;
		padding-left: 20rpx;
		text-align: left;
}
.section-title.data-v-952fae71::before {
		content: '';
		position: absolute;
		left: 0;
		top: 6rpx;
		width: 8rpx;
		height: 30rpx;
		background-color: #07c160;
		border-radius: 4rpx;
}
	
	/* 表单样式 */
.form-group.data-v-952fae71 {
		margin-bottom: 30rpx;
		width: 100%;
}
.form-item.data-v-952fae71 {
		position: relative;
		padding: 20rpx 0;
		border-bottom: 1rpx solid #f5f5f5;
		width: 100%;
		box-sizing: border-box;
		display: block;
		clear: both;
		overflow: hidden;
}
.item-row.data-v-952fae71 {
		display: flex;
		align-items: flex-start;
		width: 100%;
		justify-content: flex-start;
		position: relative;
}
.item-label.data-v-952fae71 {
		width: 140rpx;
		font-size: 28rpx;
		color: #666;
		text-align: left !important;
		flex-shrink: 0;
}
.item-value.data-v-952fae71 {
		flex: 1;
		font-size: 28rpx;
		color: #333;
		text-align: left !important;
		padding-left: 0;
}
.item-input.data-v-952fae71 {
		flex: 1;
		text-align: left !important;
}
.item-input input.data-v-952fae71 {
		height: 60rpx;
		font-size: 28rpx;
		width: 100%;
		text-align: left !important;
		padding-left: 0;
}
	
	/* 强制文本左对齐 */
.form-item text.data-v-952fae71,
	.form-item input.data-v-952fae71,
	.form-item view.data-v-952fae71 {
		text-align: left !important;
}
.profile-save-btn.data-v-952fae71 {
		background-color: #07c160;
		color: #fff;
		font-size: 30rpx;
		border-radius: 8rpx;
		margin-top: 20rpx;
		width: 100%;
}
.pwd-btn.data-v-952fae71 {
		background-color: #1989fa;
}
	
	/* 操作列表 */
.action-list.data-v-952fae71 {
		margin-bottom: 20rpx;
		width: 100%;
}
.action-item.data-v-952fae71 {
		display: flex;
		align-items: center;
		padding: 30rpx 0;
		border-bottom: 1rpx solid #f5f5f5;
		width: 100%;
		box-sizing: border-box;
}
.action-item.data-v-952fae71:last-child {
		border-bottom: none;
}
.action-icon.data-v-952fae71 {
		font-size: 40rpx;
		margin-right: 20rpx;
}
.action-text.data-v-952fae71 {
		flex: 1;
		font-size: 30rpx;
		color: #333;
		text-align: left;
}
.action-arrow.data-v-952fae71 {
		font-size: 24rpx;
		color: #ccc;
}
.logout .action-text.data-v-952fae71 {
		color: #fa5151;
}
	
	/* 版本信息居中 */
.version-info.data-v-952fae71 {
		text-align: center;
		padding: 30rpx 0;
		color: #999;
		font-size: 24rpx;
		width: 100%;
}
.version-info text.data-v-952fae71 {
		text-align: center;
}
	
	/* 响应式布局 */
@media screen and (max-width: 375px) {
.avatar-box.data-v-952fae71 {
			width: 120rpx;
			height: 120rpx;
}
.user-name.data-v-952fae71 {
			font-size: 32rpx;
}
.profile-card.data-v-952fae71 {
			padding: 20rpx;
}
.form-item.data-v-952fae71 {
			padding: 15rpx 0;
}
}
	
	/* 其他文本元素左对齐 */
.profile-container text.data-v-952fae71,
	.profile-container input.data-v-952fae71,
	.profile-container view.data-v-952fae71 {
		text-align: left;
}
